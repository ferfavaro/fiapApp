<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="@drawable/mapa"
    >

        <Button
            android:id="@+id/button_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/button_border_map"
            android:drawableLeft="@drawable/search"
            android:padding="16dp"
            android:text="Av. Paulista, 1230"
            android:textAlignment="viewStart"

            android:textColor="@android:color/darker_gray"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="350dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_border_list"
                android:drawableLeft="@drawable/text_align_center"
                android:padding="16dp"
                android:text="Lista"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_border_filter"
                android:drawableLeft="@drawable/filter"
                android:padding="16dp"
                android:text="Filtro"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/button_text"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is some information"
                android:padding="16dp"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>